<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="52.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom"
        android:baselineAligned="false"
        android:visibility="gone"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/linearLayout_tab_2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_icon_2"
                android:layout_width="52.5dip"
                android:layout_height="49.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/friends_find" />

            <TextView
                android:id="@+id/encounter_msg"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignRight="@id/tab_icon_2"
                android:layout_alignTop="@id/tab_icon_2"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="2dp"
                android:background="@drawable/newmsg_red_bg"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout_tab_3"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_icon_3"
                android:layout_width="52.5dip"
                android:layout_height="49.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/friends_message" />

            <TextView
                android:id="@+id/emotion_msg"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignRight="@id/tab_icon_3"
                android:layout_alignTop="@id/tab_icon_3"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="2dp"
                android:background="@drawable/newmsg_red_bg"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout_tab_5"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/game_icon"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/game_icon" />

                <ImageView
                    android:id="@+id/game_font_icon"
                    android:layout_width="30.0dip"
                    android:layout_height="16.0dip"
                    android:src="@drawable/game_font_icon" />

            </LinearLayout>

            <ImageView
                android:id="@+id/game_red_dot"
                android:layout_width="12.0dip"
                android:layout_height="12.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/newmsg_red_bg"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout_tab_1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="visible">

            <ImageView
                android:id="@+id/tab_icon_1"
                android:layout_width="52.5dip"
                android:layout_height="49.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/friends_flipped" />

            <TextView
                android:id="@+id/message_msg"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignRight="@id/tab_icon_1"
                android:layout_alignTop="@id/tab_icon_1"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="2dp"
                android:background="@drawable/newmsg_red_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout_tab_4"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="visible">

            <ImageView
                android:id="@+id/tab_icon_4"
                android:layout_width="52.5dip"
                android:layout_height="49.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/friends_me" />

            <TextView
                android:id="@+id/my_msg"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignRight="@id/tab_icon_4"
                android:layout_alignTop="@id/tab_icon_4"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/newmsg_red_bg"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>